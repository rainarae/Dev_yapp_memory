<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_view"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <!-- 드로우어 위에 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_gravity="bottom"
        android:background="#EAEBEC"
        android:layout_marginRight="12dp"
        android:gravity="bottom"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memory"
            android:textColor="#000000"
            android:layout_marginRight="12dp"
            android:textSize="30dp"
            android:padding="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="12dp"
        android:layout_gravity="start"
        android:background="#FFFFff"
        android:choiceMode="singleChoice"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu_home_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/list_bg_unclick"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/home_icon_unclick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:textColor="#000000"
                android:text="홈" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_category_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/list_bg_unclick"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/category_icon_unclick"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:textColor="#000000"
                android:text="카테고리" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_favorite_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/list_bg_unclick"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/bookmark_icon_unclick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:textColor="#000000"
                android:text="내 기억" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/list_bg_unclick"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/setting_icon_unclick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:textColor="#000000"
                android:text="설정" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
